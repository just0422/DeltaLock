<%# Render an input for each element %>
<div class="row entry-form-row">
    <%# For each column in the class %>
    <% className.columns_hash.each do |title, column| %>
        <%# If there exists a pretty print version of that column %>
        <% if ColumnLabels.column?(title) %>
            <%# Skip IDs, auto generated by Rails %>
            <% if title == "id" %>
                <% next %>
            <%# Setup for bitting %>
            <% elsif title == "reference_code" %>
                <div class="col s12">
                    <strong>Bitting:</strong>
                </div>
            <%# Special formmating for bitting fields %>
            <% elsif title.include? "bitting" %>
                <div class="input-field class col s12">
                    <label><%= ColumnLabels.columnToLabel(title) %></label>
                    <div class="row">
                        <% entry[title] = "//////" if entry[title].blank? %>
                        <% (0..6).each do |i| %>
                            <% tagName = title + "[" + i.to_s + "]" %>
                            <%= text_field_tag tagName, entry[title].split('/', -1)[i], class:"col bitting-push-s1 bitting-s1", placeholder: 'X' %>
                        <% end %>
                    </div>
                </div>
            <%# Otherwise, render a label and the value (if it exists) in the input box %>
            <% else %>
                <div class="input-field class col s6">
                    <%# Generate input field based on type %>
                    <% case column.type %>
                    <% when :string %>
                        <%= text_field_tag title, entry[title] %>
                    <% when :integer %>
                        <%= number_field_tag title, entry[title] %>
                    <% when :text %>
                        <%= text_area_tag title, entry[title], class:"materialize-textarea" %>
                    <% when :date %>
                        <%= date_field_tag title, entry[title] %>
                    <% end %>
                    <%= label_tag title, ColumnLabels.columnToLabel(title) %>
                </div>
            <% end %>
        <% end %>
    <% end %>
</div>
