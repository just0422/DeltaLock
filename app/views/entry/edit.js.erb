<%# Render the form and stick it in the form div -- entry/partials/_edit.html.erb %>
$("#entry-form").html("<%= j (render 'entry/partials/edit') %>");

// Create the modal
var modalElement = document.querySelector('#entry-form');
var instance = M.Modal.init(modalElement, 
    {
        opacity: 0.9,
        endingTop: '5%',
        onCloseEnd: () => {
            instance.destroy();
        }
    }
);

// Open the modal and ensure text fields look good
instance.open();
M.updateTextFields();
