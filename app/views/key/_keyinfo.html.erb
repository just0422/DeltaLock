<ul class="list-group">
	<% Key.column_names.each do |title| %>
		<li class="list-group-item">
			<div class="key-label">
				<strong><%= title %> : </strong>
				<span class="key-<%= title %>"><%= @key[title] %></span>
			</div>
		</li>
	<% end %>
</ul>
<%= link_to edit_key_path(@key), remote: true do %>
	<button class="btn">Edit</button>
<% end %>
