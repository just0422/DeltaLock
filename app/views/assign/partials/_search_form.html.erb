<div class="modal-content">
    <h3 class="center-align"><%= @class.name.underscore.humanize.split.map(&:capitalize).join(' ') %> Search</h3>
    <%= search_form_for search_type, url: result_assign_path, remote: true, method: :post do |f| %>
        <%= f.condition_fields do |c| %>
            <%= render "assign/partials/condition_fields", f: c %>
        <% end %>
        <%= link_to_add_fields '<i class="fa fa-plus-square" aria-hidden="true"></i>', f, :assign, :condition %>

        <div class="row">
            <div class="actions"><%= f.submit "Search", class:"btn col s6 push-s3 delta-btn" %></div>
        </div>
        <%= hidden_field_tag :search_type, search_id %>
    <% end %>
    </div>
    <div class="modal-footer">
        <button class="modal-close waves-effect waves-blue btn-flat ">Cancel Search</button>
    </div>
</div>
