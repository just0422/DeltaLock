<%# Render new form %>
$("#entry-new-form").html("<%= j (render 'assign/partials/new') %>");

// Create the modal
var modalElement = document.querySelector('#entry-new-form');
var instance = M.Modal.init(modalElement, 
    {
        opacity: 0.9,
        endingTop: '5%',
        onCloseEnd: () => {
            instance.destroy();
        }
    }
);

// Open the modal
instance.open();
