<div class="modal-content">
    <h3 class="center-align"><%= @class.name.underscore.split.map(&:capitalize).join(' ') %> Search</h3>
    <div id="assign-map"></div>

    <%= form_tag filter_map_path, :method => :get do %>
        <div class="row">
            <div class="col s2">
                <strong id="assign-map-slider-range">Range (mi):</strong>
            </div>
            <div class="col s10">
                <div id="assign-map-slider" class="noUiSlider"></div>
            </div>
        </div>
    <% end %>
</div>

