<!-- Setup tab header elements -->
<div>
	<ul class="tabs tabs-fixed-width" >
		<li class="tab"><a id="keycodes_search_header" href="#keycodes_search" class="active">Key Codes</a></li>
		<li class="tab"><a id="end_user_search_header" href="#end_user_search">End Users</a></li>
		<li class="tab"><a id="purchaser_search_header" href="#purchaser_search">Purchasers</a></li>
		<li class="tab"><a id="purchase_order_search_header" href="#purchase_order_search">Purchase Orders</a></li>
	</ul>
</div>

<!-- Setup tab bodys -->
<div id="purchase_order_search" class="searchtab">
    <%# Render search form %>
    <%= render 'search/partials/search_form', search_type: @purchase_order_search, search_id: "purchase_order_search", search_category: "Purchase Orders" %>

    <%# Render results table %>
    <div id="purchaseorders-table">
        <%= render 'search/partials/table', list: @purchase_orders_list, name: "Purchase Orders", classObject: PurchaseOrder, type: "purchaseorders" %>
    </div>
</div>
