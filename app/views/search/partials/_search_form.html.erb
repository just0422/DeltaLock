<%# Using Ransack search library, render search form %>
<%= search_form_for search_type, url: search_result_path, remote:true, method: :post do |f| %>
    <%= f.condition_fields do |c| %>
        <%# Render Ransack condition fields %>
		<%= render "condition_fields", f: c %>
    <% end %>

    <%# Ransack function defined in app/helpers/application_helper.rb %>
    <%= link_to_add_fields '<i class="fa fa-plus-square" aria-hidden="true"></i>', f, :search, :condition %>

	<div class="row">
		<div class="actions"><%= f.submit "Search", class:"btn col s4 push-s4 delta-btn" %></div>
	</div>
	<%= hidden_field_tag :search_type, search_id %>
<% end %>

