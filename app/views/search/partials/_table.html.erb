<%# Render results table %>
<% if list.length > 0 %>
    <h1 class="search-table-header"><%= name %></h1>
    <table class="table bordered centered responsive-table">
        <thead class="thead-inverse">
            <tr>
                <%# For each column in the model (classObject) %>
                <% classObject.column_names.each do |title| %>
                    <%# Pretty print them, if possible %>
                    <% if ColumnLabels.column?(title) %> 
                        <th><%= ColumnLabels.columnToLabel(title) %></th>
                    <% end %>
                <% end %>
            </tr>
        </thead>
        <tbody>
            <% list.each do |entry| %>
				<tr class="search-row" data-href="<%= show_entry_path(type, entry["id"]) %>">
                    <%# For each column in the model (classObject) %>
                    <% classObject.column_names.each do |column| %>
                        <%# Output the value %>
                        <% if ColumnLabels.column?(column) %>
                            <td><%= entry[column] %></td>
                        <% end %>
                    <% end %>
                </tr>
            <% end %>
        </tbody>
    </table>
<% end %>
