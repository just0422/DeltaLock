<!DOCTYPE html>
<html>
<head>
    <title>DeltaLock</title>
	<%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => false %>
	<%# stylesheet_link_tag	   'landing', media: 'all' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => false %>
    <%= csrf_meta_tags %>
</head>
<body>
    <div id="homepage-vertical-align" class="container">
        <div id="homepage-container">
            <h1 id="homepage-logo-text"> DeltaLock </h1>
            
            <div class="home-buttons-row center">
                <% if is_viewer %>
                    <a href="<%= search_path %>" class="btn-large delta-btn">Search</a>
                <% end %>
                <% if is_editor %>
                    <a href="<%= new_entry_path %>" class="btn-large delta-btn">New</a>
                    <a href="<%= assign_path %>" class="btn-large delta-btn">Assign</a>
                    <a href="<%= manage_path %>" class="btn-large delta-btn">Manage</a>
                <% end %>
            </div>
        </div>		
    </div>
</body>
</html>
