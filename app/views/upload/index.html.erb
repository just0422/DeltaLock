<h1>File Upload</h1>
<%= form_tag "#", multipart: true do %>
	<div class="file-field input-field row">
      <div class="btn delta-btn col s2">
        <label for="file">Select File</file>
        <%= file_field_tag 'file', required: true %>
      </div>
      <div class="file-path-wrapper col push-s1 s4">
        <input class="file-path validate" type="text">
      </div>
    </div>

	<div class="input-field">
		<select name="category">
			<option value="" disabled selected>Upload type</option>
			<option value="endusers">End Users</option>
			<option value="keys">Keys</option>
			<option value="purchasers">Purchasers</option>
			<option value="purchaseorders">Purchase Orders</option>
			<option value="assignments">Assignments</option>
		</select>
	</div>

	<%= submit_tag "Upload", class: "btn delta-btn" %>
	<%= hidden_field_tag :authenticity_token, form_authenticity_token %>
<% end %>
