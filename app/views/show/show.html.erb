<h1 class="show-header"><%= @column_names[@type] %>s</h1>
<div class="row">
	<div class="col s4 card">
		<ul id="entry-form" class="list-group" style="display:none;"></ul>
		<div id="entry-info">
			<%= render 'info_list' %>
		</div>
	</div>
	<div class = "col s8 card">
		<h3 class="show-header">Associations</h3>
		<table class = "table bordered centered responsive-table">
			<thead class = "thead-inverse">
				<tr>
					<% @column_names.each do |type, name| %>
						<% if type != @type %>
							<th><%= name %></th>
						<% end %>
					<% end %>
				</tr>
			</thead>
			<tbody>
				<% @associations.each do |association| %>
					<tr>
						<% association.each do |type, entry| %>
							<% if type != @type %>
								<td>
									<form action="/show/<%= type %>/<%= entry["id"] %>">
										<input type="submit" value="<%= entry["name"] %>">
									</form>
								</td>
							<% end %>
						<% end %>
					</tr>
				<% end %>
			</tbody>
		</table>
	</div>
</div>
