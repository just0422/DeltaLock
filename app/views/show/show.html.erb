<h1 class="show-header"><%= @column_names[@type] %>s</h1>
<div class="row">
	<div class="col s4 card">
		<div id="entry-form" style="display:none;"></div>
		<div id="entry-info">
			<%= render 'info_list' %>
		</div>
	</div>
	<div class = "col s8 card">
		<h3 class="show-header">Associations</h3>
		<table class = "table bordered centered responsive-table show-table">
			<thead class = "thead-inverse">
				<tr>
					<% @column_names.each do |type, name| %>
						<% if type != @type %>
							<th><%= name %></th>
						<% end %>
					<% end %>
				</tr>
			</thead>
			<tbody>
				<% @associations.each do |association| %>
					<tr>
						<% association.each do |type, entry| %>
							<% if type != @type %>
								<% if entry["name"] != ""%>
									<td class="show-table-cell">
										<a href="/show/<%= type %>/<%= entry["id"] %>">
											<div class="show-table-link"><%= entry["name"] %></div>
										</a>
									</td>
								<% else %>
									<td class="show-table-empty"></td>
								<% end %>
							<% end %>
						<% end %>
					</tr>
				<% end %>
			</tbody>
		</table>
	</div>
</div>
