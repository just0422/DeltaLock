<h1>End Users</h1>

<div class="row">
    <div class = "col-xs-6">
		<div id="enduser-form" style="display;none;"></div>
		<div id="enduser-edit">
			<ul id="enduser">
				<%= render 'enduserinfo' %>
			</ul>
			<%= link_to edit_end_user_path(@enduser), remote: true do %>
				<button>Save</button>
			<% end %>
		
    </div>
    <div class = "col-xs-6">
        <h2>Associated Purchase Order(s)</h2>
        <div class = "list-group">
            <% @purchase_orders_list.each do |po| %>
                <a class="list-group-item" href="<%= purchase_order_path(po["id"]) %>"><%= po[:po_number] %></a>
            <% end %>
        </div>
</div>
